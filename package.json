{
  "name": "RN2022",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "a": "npx react-native run-android",
    "s": "npx react-native run-ios --simulator='iPhone SE (3rd generation)'",
    "install-modules": "rm -rf node_modules yarn.lock && yarn",
    "install-arch64": "yarn install-modules && cd ios && rm -rf Pods Podfile.lock && pod install && cd ..",
